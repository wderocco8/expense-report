{
  "name": "worker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node20 --outdir=dist",
    "deploy:local-v1": "./scripts/deploy-local.sh",
    "deploy:local-v2": "./scripts/deploy-local-2.sh",
    "deploy:local-v3": "npm run build && cdklocal deploy WorkerStack-local --require-approval never",
    "deploy:staging": "npm run build && cdk deploy WorkerStack-staging --require-approval never",
    "deploy:prod": "npm run build && cdk deploy WorkerStack-prod --require-approval never",
    "send:test": "node scripts/send-test-message.js",
    "dev": "tsx dev.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/client-sqs": "^3.975.0",
    "@repo/services": "workspace:*",
    "aws-cdk-lib": "^2.236.0",
    "constructs": "^10.4.5",
    "dotenv": "^17.2.3",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.160",
    "@types/node": "^20.19.30",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0"
  }
}
